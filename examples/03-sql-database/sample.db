-- Tabela sprzedaży
CREATE TABLE sales (
    id INTEGER PRIMARY KEY,
    date TEXT,
    product_id INTEGER,
    quantity INTEGER,
    price REAL,
    region TEXT,
    sales_person TEXT
);

-- Tabela produktów
CREATE TABLE products (
    id INTEGER PRIMARY KEY,
    name TEXT,
    category TEXT,
    cost REAL,
    supplier TEXT
);

-- Tabela klientów
CREATE TABLE customers (
    id INTEGER PRIMARY KEY,
    name TEXT,
    region TEXT,
    segment TEXT,
    acquisition_date TEXT
);

-- Tabela zamówień
CREATE TABLE orders (
    id INTEGER PRIMARY KEY,
    customer_id INTEGER,
    order_date TEXT,
    total_amount REAL,
    status TEXT
);